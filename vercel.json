{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js",      "use": "@vercel/node"   },
    { "src": "public/html/**/*", "use": "@vercel/static" },
    { "src": "public/css/**/*",  "use": "@vercel/static" },
    { "src": "public/js/**/*",   "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "/html/index.html" },
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/(.*)",     "dest": "/html/$1" }
  ]
}
